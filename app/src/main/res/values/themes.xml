<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="buttonCornerRadius" format="dimension" />
    <style name="Base.Theme.EAEProjekt" parent="Theme.Material3.DayNight.NoActionBar">
        <item name ="colorPrimary">@color/background</item>
        <item name ="colorSecondary">@color/darkerYellow</item>
        <item name="colorAccent">@color/backgroundGreen</item>
        <item name="android:fontFamily">@font/russo_one_regular</item>
        <item name="android:textColor">@color/fontColor</item>
        <!-- Einstellung für ganze App das Buttons einene Corner Radius haben -->
        <item name="buttonCornerRadius">20dp</item>


    </style>

    <style name="Theme.EAEProjekt" parent="Base.Theme.EAEProjekt" />

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name ="android:backgroundTint">#EEC131</item>
        <item name="android:textColor">@android:color/black</item>


        <!-- Hier verwenden wir das benutzerdefinierte Attribut für den Eckenradius -->
        <item name="android:background">@drawable/custom_button_background</item>
    </style>

</resources>