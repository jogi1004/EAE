<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_with_rounded_corners">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/deleteShoppingList"
        android:textColor="#884D29"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:text="@string/deleteShoppingListYouSure"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#884D29" />

        <TextView
            android:id="@+id/deleteCheckedButton"
            android:minWidth="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_error_delete_text"
            android:padding="10dp"
            android:text="@string/deleteCheckedConfirmation"
            android:textColor="#884D29"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deleteAllButton"
            android:minWidth="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_error_delete_text"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/deleteConfirmation"
            android:textColor="#884D29"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancel_button"
            android:minWidth="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit_text"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#884D29"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

</LinearLayout>
