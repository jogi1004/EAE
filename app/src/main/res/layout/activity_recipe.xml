<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.RecipeActivity">

   <LinearLayout
       android:id="@+id/WelcomeLinearLayoutRecipes"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/background"
       android:orientation="horizontal">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="35sp"
           android:text="@string/BannerTextRecipeList"
           android:background="@color/backgroundGreen"
           android:textColor="@color/white"
           android:layout_marginTop="10sp"
           android:textStyle="bold"
           android:textAlignment="center"
           android:textSize="18sp"
           android:gravity="center"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="100dp"
        android:layout_marginTop="60sp"
        android:layout_marginStart="-400sp"
        app:srcCompat="@drawable/burger_andre"
        android:contentDescription="@string/ImageViewDescription"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeBackTxt"
        android:layout_marginStart="25sp"
        android:layout_marginTop="85sp"
        android:textStyle="bold"
        android:textColor="@color/fontColor"
        android:textSize="20sp"/>

   </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_above="@id/bottomNavView"
        android:layout_below="@id/WelcomeLinearLayoutRecipes">
    <ScrollView
        android:id="@+id/ScrollViewRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/recipeLayoutinScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        </LinearLayout>

    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkerYellow"
        app:menu="@menu/bottom_nav_bar"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>