<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Hintergrundfarbe des Buttons -->
    <solid android:background="#EEC131" />

    <!-- Radius für die Ecken des Buttons (verwendet das benutzerdefinierte Attribut) -->
    <corners android:radius="?attr/buttonCornerRadius" />

    <!-- Optional: Füge einen Rand hinzu -->
    <stroke
        android:width="2dp"
        android:color="#EEC131" />
</shape>